{
  "title": "Fronteira - Ficha (exemplo)",
  "id": "ficha_teste",
  "description": "Ficha inspirada no layout da imagem: topo com nome e avatar, caixas de status, 6 características em destaque e lista de perícias.",
  "rows": 90,
  "cols": 6,
  "cells": [
    [
      { "type": "field", "id": "nome_jogador", "label": "Nome do Jogador", "fieldType": "text", "colspan": 1 }
    ],
    [
      {"type": "submatrix", "id": "info_header", "label": "Informações do Personagem", "rows": 1, "cols": 6, "colspan": 6,
       "cells": [
         [
           { "type": "field", "id": "idade", "label": "Idade", "fieldType": "number" },
           { "type": "field", "id": "genero", "label": "Gênero", "fieldType": "text" },
           { "type": "field", "id": "raca", "label": "Raça", "fieldType": "text" },
           { "type": "field", "id": "classe", "label": "Classe", "fieldType": "text" },
           { "type": "field", "id": "nivel", "label": "Nível", "fieldType": "number" },
           { "type": "field", "id": "experiencia", "label": "Experiência", "fieldType": "number" }
         ]
       ]
      },
      { "type": "field", "id": "nome_personagem", "label": "Nome do Personagem", "fieldType": "text", "colspan": 5 },
      {"type": "image", "id": "avatar", "label": "Avatar", "width": 100, "height": 100,"colspan": 1 }
    ],

    [{ "type": "static", "text": "CARACTERÍSTICAS", "colspan": 6 }],

    [
      {
        "type": "submatrix",
        "id": "attributes",
        "label": "Atributos",
        "rows": 2,
        "cols": 6,
        "colspan": 6,
        "cells": [
          [
            {
              "type": "field",
              "id": "forca_fisica",
              "label": "Força Física",
              "fieldType": "number",
              "value": 10
            },
            {
              "type": "field",
              "id": "agilidade",
              "label": "Agilidade",
              "fieldType": "number",
              "value": 10
            },
            {
              "type": "field",
              "id": "intelecto",
              "label": "Intelecto",
              "fieldType": "number",
              "value": 10
            },
            {
              "type": "field",
              "id": "astucia",
              "label": "Astúcia",
              "fieldType": "number",
              "value": 10
            },
            {
              "type": "field",
              "id": "forca_vontade",
              "label": "Força de Vontade",
              "fieldType": "number",
              "value": 10
            },
            {
              "type": "field",
              "id": "porte",
              "label": "Porte",
              "fieldType": "number",
              "value": 10
            }
          ],
          [
            {
              "type": "computed",
              "id": "mod_forca_fisica",
              "label": "Mod",
              "expr": "Math.floor((forca_fisica-10)/2)"
            },
            {
              "type": "computed",
              "id": "mod_agilidade",
              "label": "Mod",
              "expr": "Math.floor((agilidade-10)/2)"
            },
            {
              "type": "computed",
              "id": "mod_intelecto",
              "label": "Mod",
              "expr": "Math.floor((intelecto-10)/2)"
            },
            {
              "type": "computed",
              "id": "mod_astucia",
              "label": "Mod",
              "expr": "Math.floor((astucia-10)/2)"
            },
            {
              "type": "computed",
              "id": "mod_forca_vontade",
              "label": "Mod",
              "expr": "Math.floor((forca_vontade-10)/2)"
            },
            {
              "type": "computed",
              "id": "mod_porte",
              "label": "Mod",
              "expr": "Math.floor((porte-10)/2)"
            }
          ]
        ]
      }
    ],

    [{ "type": "static", "text": "PERÍCIAS E HABILIDADES", "colspan": 6 }],

    [
      {
        "type": "list",
        "id": "pericias",
        "label": "Perícias",
        "itemTemplate": [
          {
            "type": "field",
            "id": "skill_name",
            "label": "Perícia",
            "fieldType": "text"
          },
          {
            "type": "field",
            "id": "skill_val",
            "label": "Valor",
            "fieldType": "number"
          }
        ],
        "items": [],
        "colspan": 6
      }
    ]
  ]
}
