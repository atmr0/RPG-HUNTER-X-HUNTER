{
  "title": "Ficha - Exemplo de Tipos",
  "description": "Exemplo contendo um campo de cada tipo: static, image, select, checkbox, button, separator, submatrix, computed e list.",
  "rows": 6,
  "cols": 3,
  "cells": [
    [
      { "type": "static", "text": "-- FICHA DE EXEMPLO --", "colspan": 3 }
    ],

    [
      { "type": "image", "id": "avatar", "src": "https://placekitten.com/128/128", "alt": "Avatar do personagem" },
      { "type": "select", "id": "classe", "label": "Classe", "options": ["Guerreiro", "Mago", "Ladino"], "value": "Guerreiro" },
      { "type": "checkbox", "id": "ativo", "label": "Ativo?", "value": true }
    ],

    [
      { "type": "button", "id": "btn_save", "label": "Salvar (action=save)", "action": "save" },
      { "type": "separator", "colspan": 2 }
    ],

    [
      {
        "type": "submatrix",
        "id": "atributos",
        "label": "Atributos (submatrix)",
        "rows": 2,
        "cols": 3,
        "colspan": 3,
        "cells": [
          [
            { "type": "field", "id": "STR", "label": "STR", "fieldType": "number", "value": 15 },
            { "type": "field", "id": "DEX", "label": "DEX", "fieldType": "number", "value": 14 },
            { "type": "field", "id": "CON", "label": "CON", "fieldType": "number", "value": 13 }
          ],
          [
            { "type": "field", "id": "INT", "label": "INT", "fieldType": "number", "value": 12 },
            { "type": "field", "id": "WIS", "label": "WIS", "fieldType": "number", "value": 10 },
            { "type": "field", "id": "CHA", "label": "CHA", "fieldType": "number", "value": 8 }
          ]
        ]
      }
    ],

    [
      { "type": "computed", "id": "forca_total", "label": "Força + Destreza (computed)", "expr": "STR + DEX % 10" },
      { "type": "list", "id": "inventario", "label": "Inventário (lista)", "itemTemplate": [ { "type": "field", "id": "item_name", "label": "Nome" }, { "type": "field", "id": "item_qty", "label": "Qtd", "fieldType": "number" } ], "items": [ { "item_name": "Corrente", "item_qty": 1 }, { "item_name": "Poção Cura", "item_qty": 2 } ], "colspan": 2 }
    ],

    [
      { "type": "field", "id": "class", "fieldType": "text", "label": "Classe" },
      { "type": "field", "id": "level", "fieldType": "number", "label": "Nível" },
      { "type": "field", "id": "race", "fieldType": "text", "label": "Raça" }
    ]
  ]
}
