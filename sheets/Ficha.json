{
  "title": "Fronteira - Ficha (exemplo)",
  "description": "Ficha inspirada no layout da imagem: topo com nome e avatar, caixas de status, 6 características em destaque e lista de perícias.",
  "rows": 9,
  "cols": 6,
  "cells": [
    [ { "type": "static", "text": "CHARACTER SHEET", "colspan": 6 } ],

    [
      { "type": "field", "id": "char_name", "label": "Nome do Personagem", "fieldType": "text", "colspan": 4 },
      { "type": "image", "id": "avatar", "src": "", "alt": "Avatar", "colspan": 2 }
    ],

    [
      { "type": "field", "id": "species", "label": "Espécie", "fieldType": "text" },
      { "type": "field", "id": "career", "label": "Carreira", "fieldType": "text" },
      { "type": "field", "id": "specializations", "label": "Especializações", "fieldType": "text", "colspan": 4 }
    ],

    [
      { "type": "field", "id": "player", "label": "Jogador", "fieldType": "text", "colspan": 2 },
      { "type": "separator", "colspan": 4 }
    ],

    [
      { "type": "submatrix", "id": "resistencia", "label": "Resistência", "rows": 1, "cols": 2, "colspan": 1, "cells": [ [ { "type": "field", "id": "res_limit", "label": "Limite", "fieldType": "number" }, { "type": "field", "id": "res_current", "label": "Atual", "fieldType": "number" } ] ] },
      { "type": "submatrix", "id": "ferimentos", "label": "Ferimentos", "rows": 1, "cols": 2, "colspan": 1, "cells": [ [ { "type": "field", "id": "wounds_limit", "label": "Limite", "fieldType": "number" }, { "type": "field", "id": "wounds_current", "label": "Atual", "fieldType": "number" } ] ] },
      { "type": "submatrix", "id": "fadiga", "label": "Fadiga", "rows": 1, "cols": 2, "colspan": 1, "cells": [ [ { "type": "field", "id": "fatigue_limit", "label": "Limite", "fieldType": "number" }, { "type": "field", "id": "fatigue_current", "label": "Atual", "fieldType": "number" } ] ] },
      { "type": "submatrix", "id": "defesa", "label": "Defesa", "rows": 1, "cols": 2, "colspan": 3, "cells": [ [ { "type": "field", "id": "def_distance", "label": "Distância", "fieldType": "number" }, { "type": "field", "id": "def_melee", "label": "Próximo", "fieldType": "number" } ] ] }
    ],

    [
      { "type": "static", "text": "CARACTERÍSTICAS", "colspan": 6 }
    ],

    [
      { "type": "submatrix", "id": "attributes", "label": "Atributos", "rows": 2, "cols": 6, "colspan": 6,
        "cells": [
          [
            { "type": "field", "id": "forca_fisica", "label": "Força Física", "fieldType": "number", "value": 10 },
            { "type": "field", "id": "agilidade", "label": "Agilidade", "fieldType": "number", "value": 10 },
            { "type": "field", "id": "intelecto", "label": "Intelecto", "fieldType": "number", "value": 10 },
            { "type": "field", "id": "astucia", "label": "Astúcia", "fieldType": "number", "value": 10 },
            { "type": "field", "id": "forca_vontade", "label": "Força de Vontade", "fieldType": "number", "value": 10 },
            { "type": "field", "id": "porte", "label": "Porte", "fieldType": "number", "value": 10 }
          ],
          [
            { "type": "computed", "id": "mod_forca_fisica", "label": "Mod", "expr": "Math.floor((forca_fisica-10)/2)" },
            { "type": "computed", "id": "mod_agilidade", "label": "Mod", "expr": "Math.floor((agilidade-10)/2)" },
            { "type": "computed", "id": "mod_intelecto", "label": "Mod", "expr": "Math.floor((intelecto-10)/2)" },
            { "type": "computed", "id": "mod_astucia", "label": "Mod", "expr": "Math.floor((astucia-10)/2)" },
            { "type": "computed", "id": "mod_forca_vontade", "label": "Mod", "expr": "Math.floor((forca_vontade-10)/2)" },
            { "type": "computed", "id": "mod_porte", "label": "Mod", "expr": "Math.floor((porte-10)/2)" }
          ]
        ]
      }
    ],

    [
      { "type": "static", "text": "PERÍCIAS E HABILIDADES", "colspan": 6 }
    ],

    [
      { "type": "list", "id": "pericias", "label": "Perícias", "itemTemplate": [ { "type": "field", "id": "skill_name", "label": "Perícia", "fieldType": "text" }, { "type": "field", "id": "skill_val", "label": "Valor", "fieldType": "number" } ], "items": [], "colspan": 6 }
    ]
  ]
}
